---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title?: string;
	frontmatter?: {
		title: string;
		[key: string]: any;
	};
}

const { title, frontmatter } = Astro.props;
const pageTitle = title || frontmatter?.title || "Martin Guillemot (ObNitram)";
const isMarkdown = !!frontmatter;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body class="flex flex-col min-h-screen bg-slate-50 text-dark-500">
		<Header />
		<main
			class={`flex-grow w-full max-w-5xl mx-auto px-4 py-8 ${isMarkdown ? "prose prose-slate max-w-none prose-headings:text-dark-500 prose-a:text-primary-600 hover:prose-a:text-primary-500" : ""}`}
		>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	/* Global styles if needed */
</style>
