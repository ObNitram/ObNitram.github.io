---
import Layout from '../../layouts/Layout.astro';

const posts = [
  {
    title: "My first article with Astro",
    date: "2023-10-01",
    description: "Discovering the Astro framework and its performance benefits.",
    slug: "mon-premier-article"
  },
  {
    title: "Why I love Tailwind CSS",
    date: "2023-10-15",
    description: "A feedback on using Tailwind CSS in my projects.",
    slug: "pourquoi-tailwind"
  },
  {
    title: "The future of web development",
    date: "2023-11-05",
    description: "Reflections on current and future web trends.",
    slug: "avenir-web"
  }
];
---

<Layout title="Blog - My Portfolio">
  <h1 class="text-3xl font-bold mb-8 text-primary-600">My Blog</h1>
  
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {posts.map((post) => (
      <article class="bg-white p-6 rounded-lg shadow-sm border border-slate-100 hover:shadow-md transition-shadow">
        <p class="text-sm text-slate-500 mb-2">{post.date}</p>
        <h2 class="text-xl font-bold mb-3 text-dark-500">
          <a href={`/blog/${post.slug}`} class="hover:text-primary-500 transition-colors">
            {post.title}
          </a>
        </h2>
        <p class="text-slate-600 mb-4">{post.description}</p>
        <a href={`/blog/${post.slug}`} class="text-primary-500 font-medium hover:underline">
          Read more &rarr;
        </a>
      </article>
    ))}
  </div>
</Layout>
