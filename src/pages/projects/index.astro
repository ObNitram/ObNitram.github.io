---
import Layout from '../../layouts/Layout.astro';

const projects = [
  {
    title: "GlobalGameJam2023",
    description: "Un jeu Unity 3D créé pour la Global Game Jam 2023. Découvrez notre gameplay unique directement dans votre navigateur web !",
    tags: ["C#", "Unity 3D", "Game Jam"],
    link: "https://github.com/ObNitram/GlobalGameJam2023"
  },
  {
    title: "sorbonne-calendar",
    description: "Outil lié au calendrier universitaire.",
    tags: ["Python"],
    link: "https://github.com/ObNitram/sorbonne-calendar"
  },
  {
    title: "Portfolio Personnel",
    description: "Ce site web ! Construit avec Astro et Tailwind CSS pour une performance maximale.",
    tags: ["Astro", "Tailwind"],
    link: "https://github.com/ObNitram"
  }
];
---

<Layout title="Projets - Martin Guillemot">
  <h1 class="text-3xl font-bold mb-8 text-primary-600">Mes Projets</h1>
  
  <div class="grid gap-6 md:grid-cols-2">
    {projects.map((project) => (
      <div class="bg-white p-6 rounded-lg shadow-sm border border-slate-100 flex flex-col">
        <h2 class="text-2xl font-bold mb-3 text-dark-500">{project.title}</h2>
        <p class="text-slate-600 mb-4 flex-grow">{project.description}</p>
        <div class="flex flex-wrap gap-2 mb-4">
          {project.tags.map((tag) => (
            <span class="bg-slate-100 text-slate-700 px-2 py-1 rounded text-sm font-medium">
              {tag}
            </span>
          ))}
        </div>
        <a href={project.link} target="_blank" rel="noopener noreferrer" class="inline-block bg-primary-500 text-white px-4 py-2 rounded hover:bg-primary-600 transition-colors text-center">
          Voir le projet
        </a>
      </div>
    ))}
  </div>
  
  <div class="mt-12 text-center">
    <a href="https://github.com/ObNitram?tab=repositories" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:underline font-medium text-lg">
      Voir tous mes projets sur GitHub &rarr;
    </a>
  </div>
</Layout>
